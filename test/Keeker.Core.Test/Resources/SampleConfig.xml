<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="proxy" type="Keeker.Core.Conf.ProxySection, Keeker.Core"/>
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7" />
  </startup>



  <connectionStrings>
    <add name="trial" connectionString="" />
  </connectionStrings>

  <proxy>
    <listeners>
      <add id="sample"
           address="192.168.0.12"
           port="81"
           isHttps="false">
        <hosts>
          <add externalHostName="www.rho.me">
            <httpRedirect toHostName="rho.me" />
          </add>

          <add externalHostName="rho.me">
            <relay domesticHostName="localhost"
                   address="127.0.0.1"
                   port="53808" />
          </add>
        </hosts>
      </add>

      <add id="std-ssl"
           address="127.0.0.1"
           port="443"
           isHttps="true">

        <hosts>
          <add externalHostName="www.rho.me">
            <httpRedirect toHostName="rho.me" />

            <certificate filePath="c:\certs\rho.me.pfx"
                         password="doresaq1488" />
          </add>

          <add externalHostName="rho.me">
            <relay domesticHostName="localhost"
                   address="127.0.0.1"
                   port="53808" />

            <certificate filePath="c:\certs\rho.me.pfx"
                         password="doresaq1488" />
          </add>
        </hosts>
      </add>
    </listeners>
  </proxy>

</configuration>